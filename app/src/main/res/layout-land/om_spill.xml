<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".MainActivity"
    android:background="@drawable/img_2"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/omspill_tittle"
        android:layout_width="276dp"
        android:layout_height="74dp"
        android:text="@string/omspill_tekst"
        android:textColor="#191970"
        android:textSize="45sp"
        android:textStyle="bold" />

    <GridLayout
        android:id="@+id/omspill_grid1"

        android:layout_width="651dp"
        android:layout_height="222dp"
        android:layout_below="@id/omspill_tittle"
        android:layout_marginTop="5dp"
        android:background="@drawable/img_3"
        android:columnCount="1"
        android:rowCount="1">

        <TextView
            android:layout_width="651dp"
            android:layout_height="match_parent"
            android:layout_row="0"
            android:layout_column="0"
            android:layout_gravity="center"
            android:text="@string/omspill_beskriv"
            android:textColor="#8B0000"
            android:textSize="30sp"
            android:textStyle="bold" />


    </GridLayout>

    <Button
        android:id="@+id/omspill_knapp1"
        android:layout_width="125dp"
        android:layout_height="50dp"
        android:layout_below="@id/omspill_grid1"
        android:background="#C71585"
        android:text="@string/omspill_knapp1"
        android:textColor="#FFF0F5"
        android:textSize="20sp" />


</RelativeLayout>