<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".MainActivity"
    android:background="@drawable/img_1"
    android:orientation="horizontal">


    <GridLayout
        android:layout_width="704dp"
        android:layout_height="197dp"
        android:layout_marginTop="32dp"
        android:columnCount="4"
        android:rowCount="1">


        <Button
            android:id="@+id/StartSpill"
            android:layout_width="165dp"
            android:layout_height="154dp"
            android:layout_row="0"
            android:layout_column="0"
            android:text="@string/start_main"
            android:textColor="@color/white"
            android:textSize="17sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/OmSpill"
            android:layout_width="165dp"
            android:layout_height="154dp"
            android:layout_row="0"
            android:layout_column="1"
            android:text="@string/om_main"
            android:textColor="@color/white"
            android:textSize="17sp"
            android:textStyle="bold" />


        <Button
            android:id="@+id/preferanser"
            android:layout_width="165dp"
            android:layout_height="154dp"
            android:layout_row="0"
            android:layout_column="2"
            android:text="@string/prefer_main"
            android:textColor="@color/white"
            android:textSize="17sp"
            android:textStyle="bold" />


        <Button
            android:id="@+id/Avslutt"
            android:layout_width="165dp"
            android:layout_height="154dp"
            android:layout_row="0"
            android:layout_column="3"
            android:text="@string/avslutt_main"
            android:textColor="@color/white"
            android:textSize="17sp"
            android:textStyle="bold" />


    </GridLayout>

        <EditText
            android:id="@+id/tekst"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

</RelativeLayout>