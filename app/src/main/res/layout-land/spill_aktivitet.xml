<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".MainActivity"
    android:background="@drawable/img"
    android:orientation="horizontal">


    <GridLayout
        android:id="@+id/gridRegnStykke"
        android:layout_width="652dp"
        android:layout_height="160dp"
        android:columnCount="1"
        android:rowCount="2">


        <TextView
            android:id="@+id/tekst_regnstykke"
            android:layout_width="match_parent"
            android:layout_height="85dp"
            android:layout_row="0"
            android:layout_column="0"
            android:background="#F0F8FF"
            android:gravity="center"
            android:text="@string/tekst_regnstykke"
            android:textColor="#800080"
            android:textSize="45sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/res_textView"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_row="1"
            android:layout_column="0"
            android:background="#F0F8FF"
            android:gravity="center"
            android:inputType="number"
            android:textColor="#191970"
            android:textSize="45sp"
            android:textStyle="bold" />

    </GridLayout>

    <GridLayout
        android:layout_width="697dp"
        android:layout_height="197dp"
        android:layout_below="@id/gridRegnStykke"
        android:layout_marginTop="9dp"
        android:columnCount="5"
        android:rowCount="3">


        <Button
            android:id="@+id/avsluttSpill"
            android:layout_width="130dp"
            android:layout_height="55dp"
            android:layout_row="0"
            android:layout_column="4"
            android:text="@string/avslutt_spill" />

        <Button
            android:id="@+id/hjelpSpill"
            android:layout_width="130dp"
            android:layout_height="55dp"
            android:layout_row="0"
            android:layout_column="3"
            android:text="@string/hjelp_spill" />

        <Button
            android:id="@+id/buttonCheck"
            android:layout_width="130dp"
            android:layout_height="55dp"
            android:layout_row="0"
            android:layout_column="1"
            android:text="@string/button_check" />

        <Button
            android:id="@+id/buttonRes"
            android:layout_width="130dp"
            android:layout_height="55dp"
            android:layout_row="0"
            android:layout_column="2"
            android:text="@string/button_res" />


        <Button
            android:id="@+id/buttonOK"
            android:layout_width="130dp"
            android:layout_height="55dp"
            android:layout_row="0"
            android:layout_column="0"
            android:text="@string/button_ok" />

        <Button
            android:id="@+id/button0"
            android:layout_width="130dp"
            android:layout_height="55dp"
            android:layout_row="2"
            android:layout_column="4"
            android:text="0" />

        <Button
            android:id="@+id/button1"
            android:layout_width="130dp"
            android:layout_height="55dp"
            android:layout_row="2"
            android:layout_column="3"
            android:text="1" />

        <Button
            android:id="@+id/button2"
            android:layout_width="130dp"
            android:layout_height="55dp"
            android:layout_row="2"
            android:layout_column="2"
            android:text="2" />

        <Button
            android:id="@+id/button3"
            android:layout_width="130dp"
            android:layout_height="55dp"
            android:layout_row="2"
            android:layout_column="1"
            android:text="3" />

        <Button
            android:id="@+id/button4"
            android:layout_width="130dp"
            android:layout_height="55dp"
            android:layout_row="2"
            android:layout_column="0"
            android:text="4" />

        <Button
            android:id="@+id/button6"
            android:layout_width="130dp"
            android:layout_height="55dp"
            android:layout_row="1"
            android:layout_column="3"
            android:text="6" />

        <Button
            android:id="@+id/button5"
            android:layout_width="130dp"
            android:layout_height="55dp"
            android:layout_row="1"
            android:layout_column="4"
            android:text="5" />

        <Button
            android:id="@+id/button7"
            android:layout_width="130dp"
            android:layout_height="55dp"
            android:layout_row="1"
            android:layout_column="2"
            android:text="7" />


        <Button
            android:id="@+id/button9"
            android:layout_width="130dp"
            android:layout_height="55dp"
            android:layout_row="1"
            android:layout_column="0"
            android:text="9" />

        <Button
            android:id="@+id/button8"
            android:layout_width="130dp"
            android:layout_height="55dp"
            android:layout_row="1"
            android:layout_column="1"
            android:text="8" />

    </GridLayout>
</RelativeLayout>
